{
  "require": {
    "google/cloud-storage": "^1.6",
    "slim/slim": "^3.0",
    "google/cloud-bigquery": "^1.16",
    "google/cloud-logging": "^1.20",
    "google/cloud-secret-manager": "^1.0",
    "wildbit/postmark-php": "^2.10"
  },
  "autoload": {
     "psr-4": {
       "Nolte\\Metrics\\DataPipeline\\": "src"
     }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.4.*",
    "phpmd/phpmd" : "@stable"
  },
  "scripts": {
    "post-install-cmd": [
      "@set-up-php-lint"
    ],
    "post-update-cmd": [
      "@set-up-php-lint"
    ],
    "set-up-php-lint": [
      "phpcs --config-set default_standard",
      "phpcs --config-set show_progress 1",
      "phpcs --config-set colors 1",
      "phpcs --config-set show_warnings 1",
      "phpcs --config-set ignore_warnings_on_exit 1"
    ],
    "lint": [
      "phpcs --standard=PSR2 src",
      "phpmd src text phpmd.xml --suffixes php --exclude vendor"
    ],
    "lint-fix": [
      "phpcbf --standard=PSR2 src"
    ]
  }
}
